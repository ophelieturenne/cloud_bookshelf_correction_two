<h1>Access a Library</h1>

<%= simple_form_for :library, url: access_libraries_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.input :unique_id, label: "Library Unique ID", placeholder: "Enter the unique ID provided by the library administrator" %>
  </div>
  <%= f.button :submit, "Access Library", class: 'btn btn-primary' %>
<% end %>

<%= link_to "Back to Home", root_path, class: 'btn btn-secondary' %>
