<h1>Add New Book to <%= @library.name %></h1>

<%= simple_form_for [@library, @book] do |f| %>
  <div class="form-group">
    <%= f.input :title, label: "Book Title" %>
    <%= f.input :author, label: "Author" %>
    <%= f.input :genre, label: "Genre" %>
    <%= f.input :year, label: "Year of Publication" %>
    <%= f.input :format, collection: [["eBook", "ebook"], ["Hardcover", "hardcover"], ["Research Paper", "researchpaper"]], label: "Format" %>
    <%= f.input :summary, label: "Summary" %>
    <% if @book.format == "hardcover" %>
      <%= f.input :quantity, label: "Quantity", input_html: { value: 1 } %>
    <% end %>
  </div>
  <%= f.button :submit, "Create Book", class: 'btn btn-success' %>
<% end %>

<%= link_to "Back to Books", library_books_path(@library), class: 'btn btn-secondary' %>
