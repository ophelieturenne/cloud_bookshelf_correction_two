<div class="access_form_container">

<h1>Step into a world of endless stories!</h1>

<%= simple_form_for :library, url: access_libraries_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.input :unique_id, label: "Enter your library's unique code to get started", placeholder: "eg: BCL001234" %>
  </div>

  <div class="button-group">
    <%= f.button :submit, "Access Library", class: 'btn btn-info' %>
      <% end %>

  <%= link_to "Back to Home", root_path, class: 'btn btn-secondary' %>
    </div>
</div>
