<h1>Checkouts</h1>

<div style="margin-top: 20px;">
  <%= link_to 'New Checkout', new_checkout_path, class: 'btn btn-primary' %>
</div>

<table>
  <thead>
    <tr>
      <th style="padding: 20px;">User Email</th>
      <th style="padding: 20px;">Book Title</th>
      <th style="padding: 20px;">Start Date</th>
      <th style="padding: 20px;">Due Date</th>
      <th style="padding: 20px;">Return Date</th>

    </tr>
  </thead>
  <tbody>
    <% @checkouts.each do |checkout| %>
        <% checkout.checkout_books.each do |checkout_book| %>
      <tr>
        <td style="padding: 20px;"><%= checkout.user.email %></td>
        <td style="padding: 20px;"><%= checkout_book.book.title %></td>
        <td style="padding: 20px;"><%= checkout_book.start_date %></td>
        <td style="padding: 20px;"><%= checkout_book.due_date %></td>
        <td style="padding: 20px;"><%= checkout_book.book.status %></td>
        <td style="padding: 20px;"><%= checkout.return_date || "Not returned yet" %></td>
        <td style="padding: 20px;"><%= link_to 'Renew', edit_checkout_path(checkout), class: 'btn btn-primary' %> </td>
      
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
